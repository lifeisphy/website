<h2>Tag: <%= tag %></h2>
<style>
  ul.tag-list {
  padding-left: 0;
  margin: 0;
  list-style: none;
}
ul.tag-list li.tag-item {
  margin-bottom: 10px;
  padding: 6px 10px;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
}
ul.tag-list a {
  font-weight: bold;
  font-size: 15px;
  margin-bottom: 2px;
  text-decoration: none;
  color: #3366cc;
}
ul.tag-list div {
  font-size: 12px;
  color: #555;
  line-height: 1.4;
  max-height: 48px;
  overflow: hidden;
}

ul.tag-list {
  math,p,ul,ol,li {
    display: inline;
  }
}
</style>
<ul class="tag-list">
  <% posts.forEach(function(post) { 
       const fileName = post.split('/').pop();
  %>
    <li class="tag-item">
      <a href="<%= post %>"><%= fileName %></a> <div><%- summaries[post] %></div>    
    </li>
  
  <% }) %>
</ul>